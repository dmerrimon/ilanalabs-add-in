<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="TaskPaneApp">

  <Id>f4e8c2a1-7b9d-4a3e-8f2c-1a5b7c9e0d3f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Ilana Labs</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <DisplayName DefaultValue="Ilana Protocol Intelligence" />
  <Description DefaultValue="AI-powered clinical protocol assistant with Grammarly-style interface for real-time compliance checking, regulatory analysis, and protocol optimization." />

  <!-- Use simple placeholder icons for now -->
  <IconUrl DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/assets/icon-80.png" />

  <SupportUrl DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net" />
  
  <AppDomains>
    <AppDomain>https://ilanalabs-add-in.onrender.com</AppDomain>
    <AppDomain>https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Document" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/index.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net"/>
        <bt:Url id="Commands.Url" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://agreeable-forest-0bbaa4e0f.3.azurestaticapps.net/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with Ilana!"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="Ilana"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Analyze Protocol"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="AI-powered clinical protocol analysis and compliance checking."/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open Ilana protocol analysis panel for real-time compliance checking and AI-powered suggestions."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>

</OfficeApp>